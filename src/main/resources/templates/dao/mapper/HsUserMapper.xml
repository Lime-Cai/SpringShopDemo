<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.springdemo.dao.mapper.HsUserMapper">
    <update id="updateUser" >
        update hs_user
        <set>
            <if test="password != null">password = #{password}</if>
            <if test="user != null">`name` = #{name}</if>
            <if test="mail != null">mail = #{mail}</if>
            <if test="phone != null">phone = #{phone}</if>
            <if test="status != null">status = #{status}</if>
            <if test="token != null">token = #{token}</if>
            <if test="is_admin != null">is_admin = #{is_admin}</if>
            <if test="last_login_time != null">last_login_time = #{last_login_time}</if>
        </set>
        <where>
            id = #{user_id}
            <if test="username">username = #{username}</if>
        </where>
    </update>

    <select id="findUsername" resultType="java.lang.Integer">
        select count(*)
        from hs_user
            <where>
                <if test="username != null">
                    username=#{username}
                </if>
            </where>
    </select>
    <select id="findLogigCheck" resultType="java.lang.Integer">
        select count(*)
        from hs_user
            <where>
                    username =#{username jdbcType="VARCHAR"},
                    password =#{password jdbcType="VARCHAR"}
            </where>

    </select>
</mapper>